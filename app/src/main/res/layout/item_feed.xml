<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/id_pic_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default"
        tools:src="@drawable/img_default"/>

    <TextView
        android:id="@+id/id_tv_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_pic_item"
        android:maxLines="2"
        android:textSize="15dp"
        tools:text="手机号20年来没有换过，这样的人在现实社会是否可以淘汰了？"/>

    <TextView
        android:id="@+id/id_tv_source_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_title_item"
        android:layout_toRightOf="@id/id_pic_item"
        android:paddingTop="10dp"
        tools:text="今日头条"/>


</RelativeLayout>