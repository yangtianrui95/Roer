<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/id_pic_item"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default"
            tools:src="@drawable/img_default"/>

        <TextView
            android:id="@+id/id_tv_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_pic_item"
            android:maxLines="2"
            android:textSize="15dp"
            tools:text="手机号20年来没有换过，这样的人在现实社会是否可以淘汰了？"/>

        <TextView
            android:id="@+id/id_tv_source_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_tv_title_item"
            android:layout_toRightOf="@id/id_pic_item"
            android:paddingTop="30dp"
            android:text="@string/feed_source"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>


